{
  "caliper":{
    "blockchain": "sawtooth",
    "command" : {
      "start": "docker-compose -f network/sawtooth-poet/sawtooth-poet-5-validators/docker-compose.yaml up -d; sleep 15s",
      "end" : "docker-compose -f network/sawtooth-poet/sawtooth-poet-5-validators/docker-compose.yaml down;docker rm -f $(docker ps -aq)"
    }
  },
  "sawtooth": {
    "batchBuilders": {
      "simple": {
        "1.0": "src/contract/sawtooth/simple/SimpleBatchBuilder.js"
      }
    },
    "network": {
      "restapi": {
        "urls": [
        "http://127.0.0.1:8000",
        "http://127.0.0.1:8001",
        "http://127.0.0.1:8002",
        "http://127.0.0.1:8003",
        "http://127.0.0.1:8004"
        ]
      },
      "validator": {
        "url": "tcp://127.0.0.1:4004"
      }
    }
  }
}
